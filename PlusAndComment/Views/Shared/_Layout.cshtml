<!DOCTYPE html>
<html xmlns:og="http://ogp.me/ns#">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>trudneŻarty.pl</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/site")*@
    @RenderSection("scripts", required: false)

    <meta property="og:url" content="http://www.trudneżarty.pl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Trudny humor" />
    <meta property="og:description" content="Strona z czarnym humorem" />
    @*<meta property="og:image" content="@Url.Content("~/Storage/logoFB.png")"/>*@
    <meta property="og:image" content="../../Storage/logo.png" />
    <link rel="icon" href="@Url.Content("~/Storage/logoIcon.ico")">

    @functions
    {
        public string CheckActive(string actionName, string controllerName)
        {
            return (ViewContext.RouteData.Values["action"].ToString().ToLower() == actionName.ToLower() && ViewContext.RouteData.Values["controller"].ToString().ToLower() == controllerName.ToLower()) ? "active".ToString() : "".ToString();
        }
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div><a href='@Url.Action("index", "Home")'><img src='@Url.Content("~/Storage/logo.png")' style="height: 50px;" /></a></div>

                <div class="navbar-inner visible-xs">
                    <div class="nav-center">
                        <div><a href='@Url.Action("index", "Home")'><img src='@Url.Content("~/Storage/logo.png")' style="height: 50px;" /></a></div>
                    </div>
                </div>

            </div>
            @Html.Partial("_LoginPartial")
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <div class="@CheckActive("Articles", "Home")" style="display: inline-block; padding-top: 9px;"><a href="/Home/Articles" style="font-size: 18px; font-weight: bold; display: inline-block; width: 100%;"><span class="glyphicon glyphicon-list-alt" style="padding-right: 5px;"></span>Z sieci</a></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
