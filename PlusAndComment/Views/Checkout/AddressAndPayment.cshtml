                            </div>
                            @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-20">
                    <input type="submit" value="Zamów" class="btn btn-success" />
                </div>
