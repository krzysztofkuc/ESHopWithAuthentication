@model PlusAndComment.Models.ViewModel.OrderVM

@{
//Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddressAndPayment</title>
</head>
<body>
